extends ../layouts/application.pug

block header
  = t('views.tasks.editTask')

block content
  +formFor()(action=route('taskEdit', { id: task.id }), method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)(type="text", rows=3)
    +select(task, 'statusId', errors, statuses)
    +select(task, 'executorId', errors, users)
    +selectMultiple(task, 'labels', errors, labels)
    input(type="hidden", name="_method", value="patch")
    input.btn.btn-primary(type="submit", value=t("views.tasks.edit"))