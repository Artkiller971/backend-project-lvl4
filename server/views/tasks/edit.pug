extends ../layouts/application.pug

block header
  = t('views.tasks.edit.task')

block content
  +formFor()(action=route('taskEdit', { id: task.id }), method='post')
    +input(task, 'name', errors)(type="text")
    +input(task, 'description', errors)(type="text")
    +input(task, 'executorId', errors)(type="text")
    +input(task, 'statusId', errors)(type="text")
    input(type="hidden", name="_method", value="patch")
    input.btn.btn-primary(type="submit", value=t("views.tasks.edit.submit"))