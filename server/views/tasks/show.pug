block header
  = task.name
block content
  .row.mt-5.p-5.shadow
    .col-12.col-md-8.order-2.order-md-1
      .lead.fw-normal.mb-4 #{task.description}
    .col-12.col-md-4.border-start.px-3.order-1.order-md-2.mb-3.mb-md-0
      .mb-2
        span.me-1.badge.bg-danger.text-white #{task.status}
      .d-flex.flex-wrap.mb-3
        span.text-muted.me-2= t('views.tasks.creator')
        span #{task.creator.firstName} #{task.creator.lastName}
      .d-flex.flex-wrap.mb-3
        span.text-muted.me-2= t('views.tasks.executor')
        if task.executor
          span #{task.executor.firstName || ''} #{task.executor.lastName || ''}
        else
          span
      .d-flex.flex-wrap.mb-3
        span.text-muted.me-2= t('views.tasks.creationDate')
        span #{task.createdAt}
      .d-flex.flex-wrap
        a.btn.btn-primary.me-1(href=route('taskEdit', { id: task.id }))= t('views.tasks.edit')
        form(action=route('taskDelete', { id: task.id }), method = 'post')
                input(name='_method', type='hidden', value='delete')
                input.btn.btn-danger(type='submit', value=t('views.tasks.delete'))
