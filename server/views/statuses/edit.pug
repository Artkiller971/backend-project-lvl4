extends ../layouts/application.pug

block header
  = t('views.statuses.edit.status')

block content
  +formFor()(action=route('statusEdit', { id: status.id }), method='post')
    +input(status, 'name', errors)(type="text")
    input(type="hidden", name="_method", value="patch")
    input.btn.btn-primary(type="submit", value=t("views.statuses.edit.submit"))