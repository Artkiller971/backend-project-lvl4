extends ../layouts/application.pug

block header
  = t('views.labels.edit.label')

block content
  +formFor()(action=route('labelEdit', { id: label.id }), method='post')
    +input(label, 'name', errors)(type="text")
    input(type="hidden", name="_method", value="patch")
    input.btn.btn-primary(type="submit", value=t("views.labels.edit.submit"))